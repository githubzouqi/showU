<?xml version="1.0" encoding="utf-8"?>
<in.srain.cube.views.ptr.PtrFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ptr_frame_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FeedbackActivity">

        <android.support.v7.widget.CardView
            android:visibility="visible"
            app:cardCornerRadius="8dp"
            android:layout_margin="6dp"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:nestedScrollingEnabled="false"
                android:id="@+id/linear_webview_feedback"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>

            <ImageView
                android:visibility="visible"
                android:id="@+id/iv_feedback_exit"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:src="@mipmap/update_close"
                android:foreground="@drawable/water_foreground_whte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>


</in.srain.cube.views.ptr.PtrFrameLayout>